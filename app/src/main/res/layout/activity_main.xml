<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:gravity="center"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Các bạn mở bluetooth trong cài đặt rồi kết nối vào HC-05 rồi đóng app mở lại vài lần cho tới khi nhận được BlueTooth Address nhé. (Nhấn để ẩn)"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="BlueTooth Address"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:text="value"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txtSpeed"
        android:text="min = 0, max = 255, defalut = 255"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnLess"
            android:background="@color/black"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="50dp"
            android:textSize="20dp"
            android:text="-" />

        <TextView
            android:background="@color/black"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="50dp"
            android:textSize="20dp"
            android:text="Tốc độ" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnMore"
            android:background="@color/black"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="50dp"
            android:textSize="20dp"
            android:text="+" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnUp"
        android:background="@color/black"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="50dp"
        android:textSize="20dp"
        android:text="UP" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnLeft"
            android:background="@color/black"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="50dp"
            android:textSize="20dp"
            android:text="LEFT" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnRight"
            android:background="@color/black"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="50dp"
            android:textSize="20dp"
            android:text="RIGHT" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnDown"
        android:background="@color/black"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="50dp"
        android:textSize="20dp"
        android:text="DOWN" />
</LinearLayout>